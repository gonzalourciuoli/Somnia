<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/newAlarmLayoutTitle"
        style="@style/Title"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/reef"
        android:text="@string/newAlarm_layout_title"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/current_Email"
        android:layout_width="306dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:autofillHints="@string/alarm_title"
        android:ems="10"
        android:fontFamily="@font/reef_family"
        android:hint="@string/alarm_title"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/newAlarmLayoutTitle"
        app:layout_constraintTop_toBottomOf="@+id/newAlarmLayoutTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/current_Email"
        app:layout_constraintTop_toBottomOf="@+id/current_Email"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="65dp"
        android:text="@string/add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wednesday_switch" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="65dp"
        android:text="@string/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saturday_switch" />

    <Switch
        android:id="@+id/monday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="106dp"
        android:text="Monday"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <Switch
        android:id="@+id/tuesday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="106dp"
        android:text="Tuesday"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659" />

    <Switch
        android:id="@+id/wednesday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="106dp"
        android:text="Wednesday"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <Switch
        android:id="@+id/thursday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="106dp"
        android:text="Thursday"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <Switch
        android:id="@+id/friday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="106dp"
        android:text="Friday"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659" />

    <Switch
        android:id="@+id/saturday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="106dp"
        android:text="Saturday"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <Switch
        android:id="@+id/sunday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="106dp"
        android:text="Sunday"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

</androidx.constraintlayout.widget.ConstraintLayout>