<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/n2">

    <TextView
        android:id="@+id/newAlarmLayoutTitle"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:text="@string/newAlarm_layout_title"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/alarmTitle"
        android:layout_width="306dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="40dp"
        android:autofillHints="@string/alarm_title"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@drawable/color_cursor"
        android:ems="10"
        android:fontFamily="@font/reef_family"
        android:hint="@string/alarm_title"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newAlarmLayoutTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="324dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/alarmTitle"
        app:layout_constraintTop_toBottomOf="@+id/alarmTitle"
        app:layout_constraintVertical_bias="0.0" />


    <com.spark.submitbutton.SubmitButton
        android:id="@+id/add"
        android:layout_width="382dp"
        android:layout_height="399dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="40dp"
        android:text=" ADD"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wednesday_switch"
        app:sub_btn_background="#b99aff"
        app:sub_btn_duration="1500"
        app:sub_btn_line_color="#dbc7ff"
        app:sub_btn_ripple_color="#b99aff"
        app:sub_btn_tick_color="@color/white" />



    <Button
        android:id="@+id/cancel"
        android:layout_width="130dp"
        android:layout_height="66dp"
        android:layout_gravity="right"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="65dp"
        android:text="@string/cancel_button"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saturday_switch"
        app:layout_constraintStart_toEndOf="@id/add"/>

    <Switch
        android:id="@+id/monday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="106dp"
        android:text="Monday"
        android:fontFamily="@font/reef_family"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <Switch
        android:id="@+id/tuesday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="106dp"
        android:text="Tuesday"
        android:fontFamily="@font/reef_family"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659" />

    <Switch
        android:id="@+id/wednesday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="106dp"
        android:text="Wednesday"
        android:fontFamily="@font/reef_family"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <Switch
        android:id="@+id/thursday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="106dp"
        android:text="Thursday"
        android:fontFamily="@font/reef_family"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

    <Switch
        android:id="@+id/friday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="106dp"
        android:text="Friday"
        android:fontFamily="@font/reef_family"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659" />

    <Switch
        android:id="@+id/saturday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="106dp"
        android:text="Saturday"
        android:fontFamily="@font/reef_family"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <Switch
        android:id="@+id/sunday_switch"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="106dp"
        android:text="Sunday"
        android:fontFamily="@font/reef_family"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:theme="@style/SwitchTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578" />

</androidx.constraintlayout.widget.ConstraintLayout>