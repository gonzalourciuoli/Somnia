<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="175dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="40dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="175dp"
        android:background="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a0000000"
            ></LinearLayout>

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="175dp"
            android:background="#E0B0FF"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/date_rating"
                style="@style/Title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:ems="10"
                android:fontFamily="@font/reef"
                android:text="Date rating"
                android:textAlignment="center"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/numStars_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_rating"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/reef"
                android:text="Rating"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sport_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numStars_rating"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/reef"
                android:text="Sport"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/coffee_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sport_rating"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/reef"
                android:text="Coffee"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/alcohol_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffee_rating"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/reef"
                android:text="Alcohol"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/comment_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alcohol_rating"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/reef"
                android:text="Comment"
                android:textSize="20dp" />

            <Button
                android:id="@+id/deleteImage"
                android:layout_width="37dp"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/date_rating"
                android:layout_toRightOf="@id/date_rating"
                android:background="@drawable/ic_delete_forever_black_24dp" />




        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>