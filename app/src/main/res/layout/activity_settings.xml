<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Settings">

    <TextView
        android:id="@+id/top_settings"
        android:layout_width="211dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/top_settings"
        android:fontFamily="@font/reef_family"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ch_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/ch_Email"
        android:fontFamily="@font/reef_family"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/top_settings"
        app:layout_constraintTop_toBottomOf="@+id/top_settings" />


    <View
        android:id="@+id/bar1"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        android:background="#B1AEC2"
        app:layout_constraintStart_toStartOf="@+id/ch_Email"
        app:layout_constraintTop_toBottomOf="@+id/ch_Email" />

    <TextView
        android:id="@+id/ch_Pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/ch_Pass"
        android:fontFamily="@font/reef_family"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/ch_Email"
        app:layout_constraintTop_toBottomOf="@+id/ch_Email" />

    <View
        android:id="@+id/bar2"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        android:background="#B1AEC2"
        app:layout_constraintStart_toStartOf="@+id/ch_Pass"
        app:layout_constraintTop_toBottomOf="@+id/ch_Pass" />

    <TextView
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/log_out"
        android:fontFamily="@font/reef_family"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/ch_Pass"
        app:layout_constraintTop_toBottomOf="@+id/ch_Pass" />

    <View
        android:id="@+id/bar3"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        android:background="#B1AEC2"
        app:layout_constraintStart_toStartOf="@+id/log_out"
        app:layout_constraintTop_toBottomOf="@+id/log_out" />

    <TextView
        android:id="@+id/del_Acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/del_Acc"
        android:fontFamily="@font/reef"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/log_out"
        app:layout_constraintTop_toBottomOf="@+id/log_out" />

    <fragment
        android:id="@+id/toolbar"
        class="com.example.somnia.Toolbar"
        android:layout_width="410dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </fragment>

</androidx.constraintlayout.widget.ConstraintLayout>