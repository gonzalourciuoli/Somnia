<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Settings">

    <TextView
        android:id="@+id/top_settings"
        android:layout_width="211dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Change e-mail"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/top_settings"
        app:layout_constraintTop_toBottomOf="@+id/top_settings" />


    <View
        android:id="@+id/bar1"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        android:background="#B1AEC2"
        app:layout_constraintStart_toStartOf="@+id/chEmail"
        app:layout_constraintTop_toBottomOf="@+id/chEmail" />

    <TextView
        android:id="@+id/chPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Change password"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/chEmail"
        app:layout_constraintTop_toBottomOf="@+id/chEmail" />

    <View
        android:id="@+id/bar2"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        android:background="#B1AEC2"
        app:layout_constraintStart_toStartOf="@+id/chPass"
        app:layout_constraintTop_toBottomOf="@+id/chPass" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Log out"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/chPass"
        app:layout_constraintTop_toBottomOf="@+id/chPass" />

    <View
        android:id="@+id/bar3"
        android:layout_width="250dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        android:background="#B1AEC2"
        app:layout_constraintStart_toStartOf="@+id/logout"
        app:layout_constraintTop_toBottomOf="@+id/logout" />

    <TextView
        android:id="@+id/delAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Delete account"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/logout"
        app:layout_constraintTop_toBottomOf="@+id/logout" />

    <ImageView
        android:id="@+id/cuadrotoolbar_settings"
        android:layout_width="411dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cuadrotoolbar" />

    <ImageView
        android:id="@+id/graficas_settings"
        android:layout_width="37dp"
        android:layout_height="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/graficas" />

    <ImageView
        android:id="@+id/alarmas_settings"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginStart="94dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cuadrotoolbar_settings"
        app:srcCompat="@drawable/alarmas" />

    <ImageView
        android:id="@+id/principal_settings"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginStart="179dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cuadrotoolbar_settings"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/calculadora_settings"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginStart="274dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cuadrotoolbar_settings"
        app:srcCompat="@drawable/calculadora" />

    <ImageView
        android:id="@+id/settings_settings"
        android:layout_width="37dp"
        android:layout_height="39dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cuadrotoolbar_settings"
        app:srcCompat="@drawable/settings" />

</androidx.constraintlayout.widget.ConstraintLayout>