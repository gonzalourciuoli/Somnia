<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/alarmLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:text="@string/alarm_layout_title"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        style="@style/Title"/>

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="480dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Switch
                android:id="@+id/alarm_switch"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarmSwitch_text" />

            <Switch
                android:id="@+id/alarm_switch2"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarmSwitch_text2" />

            <Switch
                android:id="@+id/alarm_switch3"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alarmSwitch_text3" />

        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/cuadrotoolbar_principal"
        android:layout_width="411dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cuadrotoolbar" />

    <ImageView
        android:id="@+id/graficas_principal"
        android:layout_width="37dp"
        android:layout_height="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/graficas" />

    <ImageView
        android:id="@+id/alarmas_principal"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginStart="94dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cuadrotoolbar_principal"
        app:srcCompat="@drawable/alarmas" />

    <ImageView
        android:id="@+id/principal_principal"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginStart="179dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cuadrotoolbar_principal"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/calculadora_principal"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginStart="274dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cuadrotoolbar_principal"
        app:srcCompat="@drawable/calculadora" />

    <ImageView
        android:id="@+id/settings_principal"
        android:layout_width="37dp"
        android:layout_height="39dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cuadrotoolbar_principal"
        app:srcCompat="@drawable/settings"/>

</androidx.constraintlayout.widget.ConstraintLayout>